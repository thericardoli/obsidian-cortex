{
	"name": "obsidian-sample-plugin",
	"version": "1.0.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"scripts": {
		"dev": "bun run dev:css & node esbuild.config.mjs",
		"dev:css": "tailwindcss -i ./src/input.css -o ./styles.css --watch",
		"build": "tsc -noEmit -skipLibCheck && bun run build:css && node esbuild.config.mjs production",
		"build:css": "tailwindcss -i ./src/input.css -o ./styles.css --minify",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"svelte-check": "svelte-check --tsconfig tsconfig.json"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.544.0",
		"@tailwindcss/cli": "^4.1.17",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"bits-ui": "^2.11.0",
		"builtin-modules": "3.3.0",
		"clsx": "^2.1.1",
		"esbuild": "^0.27.0",
		"esbuild-svelte": "^0.9.3",
		"obsidian": "latest",
		"svelte": "^5.45.4",
		"svelte-check": "^4.3.4",
		"svelte-preprocess": "^6.0.3",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tslib": "2.4.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"ai": "^5.0.106",
		"runed": "^0.37.0"
	}
}
